<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_item_margin_top"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:paddingStart="15dp"
    >

    <TextView
        android:id="@+id/text_view_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:text="Длинный заголовок Длинный заголовокДлинный заголовокДлинный заголовокДлинный заголовок"
        />

    <TextView
        android:id="@+id/text_view_note_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Длинный заголовок Длинный заголовокДлинный заголовокДлинный заголовокДлинный заголовок"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            tools:text="10.11.2022"
            />

        <CheckBox
            android:id="@+id/is_important_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layoutDirection="rtl"
            android:text="Impt"
            />
    </LinearLayout>
</LinearLayout>
