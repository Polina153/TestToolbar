<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_item_margin_top"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:paddingStart="@dimen/list_item_padding"
    android:paddingEnd="@dimen/list_item_padding"
    >

    <TextView
        android:id="@+id/text_view_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/list_item_title_size"
        android:textStyle="bold"
        tools:text="Длинный заголовок Длинный заголовокДлинный заголовокДлинный заголовокДлинный заголовок"
        />

    <TextView
        android:id="@+id/text_view_note_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Длинный заголовок Длинный заголовокДлинный заголовокДлинный заголовокДлинный заголовок"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:textStyle="bold"
            tools:text="10.11.2022"
            />

        <CheckBox
            android:id="@+id/is_important_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layoutDirection="rtl"
            android:text="@string/is_important_checkbox_title"
            />
    </FrameLayout>
</LinearLayout>
